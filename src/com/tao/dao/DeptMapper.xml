<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tao.dao.DeptMapper">
    <delete id="delete"></delete>

    <select id="getAll" resultMap="DeptAndPosition">
        select d.d_id d_id,d.d_name d_name,p.p_name,p.p_id,p.p_salary
         from dept d,position p
        where p.d_id=d.id
        and d.d_id=#{id}
    </select>
    <resultMap id="DeptAndPosition" type="Dept">
        <id property="id" column="d_id"></id>
        <result property="name" column="d_name"/>
        <collection property="positions" ofType="Position"></collection>
    </resultMap>
    <select id="getById" resultType="com.tao.model.Dept"></select>
</mapper>